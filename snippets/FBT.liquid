                    ><strong>{{ 'products.fbt.this_item' | t }}</strong> {{ product.title | truncatewords: 12 -}}
                    {%- if available_v.size < 2 and product.has_only_default_variant == false %}
                      - {{ available_v_1.title -}}
                    {%- endif -%}
                  </span>

                  {%- if available_v.size < 2 -%}
