                      data-groups-pr-sl
                      name="items[][id]"
                      data-cpprice="{{ available_v_1.compare_at_price | default: available_v_1.price }}"
                      data-price="{{ available_v_1.price }}"
                      value="{{ available_v_1.id }}"
                      type="hidden"
                    >
                  {%- else -%}
